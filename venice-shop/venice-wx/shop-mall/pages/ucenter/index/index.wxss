.service {
  position: static;
  background-color: transparent;
  color: transparent;
  margin: 0;
  padding: 0;
  border: none;
  text-align: left;
  line-height: normal;
  display: inline;
}

.order-list-box{
  width: 100%;
  position: relative;
  background-color: #fff;
  margin-top: 20rpx;
}
.order-list{
  padding: 20rpx 10rpx 0;
  position: relative;
}
.order-list .order-icon{
  width: 44rpx;
  height: 44rpx;
  display: block;
  margin: 0 auto;
}
.order-list .txt{
  display: block;
  text-align: center;
  margin-top: 6rpx;
  font-size: 30rpx;
  color: #666;
}
.order-list .weui-cell__hd{
  margin-right: 20rpx;
}
.order-list-box .order-menu{
  width: 100%;
  position: relative;
}
.order-list-box .menu-body{
  display: flex;
  padding: 20rpx 10rpx 0;
}
.order-list-box .menu-body .menu-item{
  flex: 1;
  text-align: center;
  position: relative;
}
.order-list-box .menu-body .menu-item .item-img{
  width: 50rpx;
  height: 50rpx;
  margin: 0 auto;
}
.order-list-box .menu-body .menu-item .txt{
  text-align: center;
  display: block;
  font-size: 28rpx;
  color: #333;
}
.order-list-box .menu-body .menu-item .tips{
    display: flex;
    position: absolute;
    overflow: hidden;
    width: auto;
    height: 34rpx;
    color: rgb(255, 85, 0);
    -webkit-box-pack: center;
    justify-content: center;
    -webkit-box-align: center;
    align-items: center;
    border: 1rpx solid rgb(255, 85, 0);
    padding: 10rpx;
    border-radius: 100%;
    background-color: rgb(255, 255, 255);
    top: -10rpx;
    left: 50%;
    margin-left: 30rpx;
}
.order-list-box .menu-body .menu-item .num{
  text-overflow: ellipsis;
  overflow: hidden;
  color: rgb(255, 85, 0);
  font-size: 20rpx;
}